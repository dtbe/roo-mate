{
  "name": "roo-lay",
  "displayName": "Roo Relay",
  "description": "VS Code extension to relay Discord messages to Roo Code LLM.",
  "version": "1.0.0",
  "publisher": "RooVeterinaryInc",
  "engines": {
    "vscode": "^1.80.0"
  },
  "extensionDependencies": [
    "RooVeterinaryInc.roo-cline"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/your-repo-name.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "roo-lay.triggerRooCode",
        "title": "Trigger Roo Code LLM"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-prod",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTests.js",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild-prod": "npm run esbuild-base -- --minify",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "compile-web": "webpack",
    "watch-web": "webpack --watch"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "ws": "^8.18.3"
  }
}
